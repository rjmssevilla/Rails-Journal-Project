  <h2>Current Category: <%=@category.title %> </h2>
  <%= link_to 'Edit', edit_category_path %>
  <%= link_to 'Back', categories_path%>

  <div class = "container">
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
    <% @category.tasks.each do |task| %>
      <tr>
    <td><%= task.title %></td>
    <td><%= task.deadline%></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task_path(task), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
  <%= link_to 'Create New Task', new_category_task_path(@category) %>
  <%= link_to 'SHOW TASKS', category_tasks_path(@category) %>




