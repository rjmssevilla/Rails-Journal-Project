<div class = "category-header-container">
<h2>Current Category: <%=@category.title %> 

<%= link_to 'Back', user_categories_path(@user)%> </h2>
</div>


  <div class = "container">
  <%= link_to 'Create New Task', new_category_task_path(@category), class: 'btn btn-success mb-3' %>
  <%= link_to 'Edit Category', edit_category_path(@category), class:"btn btn-light mb-3" %>
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
    <% @category.tasks.each do |task| %>
      <tr>
    <td><%= task.title %></td>
    <td><%= task.description%></td>
    <td><%= link_to 'Show', task_path(task) %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Delete', task_path(task), class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

