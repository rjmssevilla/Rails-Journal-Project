<div class = "container">
<%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
</div>
<div class = "container">
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
    <th>Category</th>
    <th>Show task</th>
  </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
    <td><%= category.title %></td>
    <td><%= link_to 'Show', category_path(category) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

