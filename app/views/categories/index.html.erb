<%= stylesheet_link_tag 'categories.css' %>
<br><br>
<div class="container">

<%= link_to 'Create New Category', new_user_category_path(@user), class: 'btn btn-new-category mb-3' %>
<% @user.categories.each do |category| %>
  <div id = "category-index-container" class = "container mb-5">
    <div class="row mt-3">
      <div class="col-6">
       <h1>CATEGORY: <%= category.title%> </h1>
      </div>
      <div class="col-6">
       <%= link_to 'Delete Category', category_path(category), class:"btn btn-light btn-delete-category", method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
     </div>
    </div>
    <hr class = "category-hr">

    <div class="row mb-3">
      <div class="col-6">
      <h4>Number of tasks: <%= category.tasks.count%> </h4>
      </div>
      <div class="col-6">
      <%= link_to 'Show Tasks', category_path(category),class:"btn btn-light" %>
      </div>
    </div>
  </div>
<% end %>

</div>

