<%= stylesheet_link_tag 'task_show.css' %>
<div class="jumbotron mt-5">
  <h1 class="display-4"><%=@task.title%></h1>
  <h2 class="lead">Description: <%=@task.description%></h2>
  <hr class="my-4">
  <h3>DEADLINE: <u><%=@task.deadline.strftime("%m/%d/%Y")%></u></h3>
  Last edited: <%= time_ago_in_words(@task.updated_at, include_seconds: true)%>
  <p class="lead mt-5">
  <%= link_to 'Edit Task', edit_task_path(@task), class:"btn-edit-task"%>
  <%= link_to 'Delete Task', task_path(@task), class:"btn-delete-task", method: :delete, data: { confirm: 'Are you sure you want to delete this?' } %>
  </p>
</div>