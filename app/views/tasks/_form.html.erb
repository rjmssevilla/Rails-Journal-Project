<%= stylesheet_link_tag 'category_show.css' %>

<% if @task.errors.any? %>
  <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>
  <ul>
    <% @task.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: [@category, @task], local: true do |form| %>
 <div class = "form-new-task">
  <div class="form-group">
   <%= form.label :title %>
   <%= form.text_field :title, class:"form-control" %>
  </div>

  <div class="form-group">
  <%= form.label :descripiton %>
  <%= form.text_area :description, class:"form-control", rows:3 %>
 </div>

 <div class="form-group">
 <%= form.label :deadline %>
 <%= form.date_field :deadline, class:"form-control" %>
</div>
</div>
   <%= form.submit "SUBMIT", class:"btn-submit-new-task" %>
 <%end%>

