<div class = "container">
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Deadline</th>
    <th>Category ID</th>
    
  </tr>
  </thead>
<h1>SKKKR</h1>
  <tbody>
    <% @tasks.each do |task| %>
      <% if task.deadline == Date.today %>
      <tr>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.deadline %></td>
      <td><%= task.category_id %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      </tr>
      <% end %>
   
    <% end %>
  </tbody>
</table>
</div>

