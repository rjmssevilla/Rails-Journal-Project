<div class = "container">
<table class = "table table-bordered table-striped">
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Deadline</th>
    <th>Category ID</th>
    
  </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
    <td><%= task.title %></td>
    <td><%= task.description %></td>
    <td><%= task.deadline %></td>
    <td><%= task.category_id %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

